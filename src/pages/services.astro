---
import Layout from "../layouts/Layout.astro";
import data from '../data/main.json';
import ServiceCard from '../components/ServiceCard.astro';
---

<Layout>
	<div class="container mx-auto px-4 xl:px-30 py-4">
		<article>
			<header class="prose my-6 flex items-end flex-row gap-4">
				<h2 class="flex mb-0">服務狀態</h2>
				<a class="flex" href="https://status.yuaner.tw">前往完整的狀態頁</a>
			</header>
			<div class="bg-base-content/10 mx-1 h-px mb-8"></div>

			<div class="content">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
					{data.services.map(item => (
						<ServiceCard {...item} />
					))}
				</div>
			</div>
		</article>
	</div>
</Layout>
