---
import MainData from '../data/main.json'

const { pathname } = Astro.url;
const currentPath = pathname.slice(1);
---
<div class="navbar bg-base-100 shadow-sm bg-zinc-800 text-neutral-content flex flex-col md:flex-row md:items-center md:justify-between px-4 py-2">
  <!-- ---------- 第一列：網站標題 ---------- -->
  <div id="site-title-dock" class="flex items-center">
    <div id="site-title" class={currentPath === '' ? 'md:opacity-0' : ''}>
      <div class="avatar inline-flex mr-2">
        <div class="w-10 rounded-full">
          <img src={MainData.avatar.url} />
        </div>
      </div>
      <a class="btn btn-ghost text-xl p-0" href="/">{MainData.name}</a>
    </div>
  </div>

  <!-- ---------- 第二列：導覽選單 ----------
      手機 (xs) 時置中、桌面 (md+) 時右對齊 -->
  <div class="mt-2 md:mt-0 flex md:self-auto self-center">
    <ul class="menu menu-horizontal flex flex-wrap gap-2
              justify-center  /* 手機置中 */
              md:justify-end   /* 桌面右對齊 */">
      <li><a class={currentPath === 'mains' ? 'menu-active' : ''} href="/mains">主要服務與作品</a></li>
      <li><a class={currentPath === 'works' ? 'menu-active' : ''} href="/works">相關作品</a></li>
      <li><a class={currentPath === 'services' ? 'menu-active' : ''} href="/services">服務狀態</a></li>
      <li><a class={currentPath === 'about' ? 'menu-active' : ''} href="/about">關於</a></li>
    </ul>
  </div>
</div>
