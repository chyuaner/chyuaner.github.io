---
import MainData from '../data/main.json'

const { pathname } = Astro.url;
const currentPath = pathname.slice(1);
---
<div class="navbar bg-base-100 shadow-sm bg-zinc-800 text-neutral-content">
  <div class="flex-1">
    <div id="site-title-dock" class={currentPath === '' ? 'hidden' : 'flex'}>
      <div class="avatar hidden md:inline-flex">
        <div class="w-10 rounded-full">
          <img src={MainData.avatar.url} />
        </div>
      </div>
      <a class="btn btn-ghost text-xl" href="/">{MainData.name}</a>
    </div>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <!-- <li><a class={currentPath === 'mains' ? 'menu-active' : ''} href="/mains">主要服務與作品</a></li> -->
      <li><a class={currentPath === 'works' ? 'menu-active' : ''} href="/works">相關作品</a></li>
      <li><a class={currentPath === 'services' ? 'menu-active' : ''} href="/services">服務狀態</a></li>
      <li><a class={currentPath === 'about' ? 'menu-active' : ''} href="/about">關於</a></li>
    </ul>
  </div>
</div>
