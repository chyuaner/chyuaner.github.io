---
import CardImage from "./CardImage.astro";

const { is_hide, vertical=false, colSpan: initialColSpan, isSub=false, exClass="", mainImgSrc, mainImgAlt="",
  buttons = [
  //   { text: "Button 1", href: "#" },
  //   { text: "Button 2", href: "#" },
  //   { text: "Button 3", href: "#" },
  ],
} = Astro.props;

let colSpan = initialColSpan;
if (!colSpan) {
  colSpan = vertical ? 2 : 12;
}

if (is_hide) {
  return null;
}

---

<div class=`${isSub ? '' : 'main-card'} relative col-span-${colSpan} ${exClass} overflow-clip rounded-[10px] bg-base-100 shadow-sm dark:shadow-neutral-600 grid grid-cols-12 gap-4`>
  {mainImgSrc && (
    <figure class={`col-span-12 ${vertical ? '' : 'md:col-span-4'}`}>
      <CardImage src={mainImgSrc} alt={mainImgAlt} class="md:absolute md:h-full md:w-auto mask-gradient" />
    </figure>
  )}

  <div class=`col-span-12 ${vertical ? '' : 'md:col-span-8'} flex-1 flex flex-col z-10`>
    <div class="card-body">
      <slot />
    </div>
    <div class="join join-vertical md:join-horizontal mt-auto self-end w-full md:w-auto">
      {buttons.map((btn) => (
        <a href={btn.href} class=`${btn.class} btn join-item`>
          {btn.text}
        </a>
      ))}
    </div>
  </div>
</div>
