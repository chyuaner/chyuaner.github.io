---
const { name, is_new, tags, img, description, links } = Astro.props;
---

<div class="card card-compact bg-base-100 shadow-sm">
	<figure>
		<img src={img} alt={name} />
	</figure>
	<div class="card-body">
		<header class="flex flex-col sm:flex-row">
			<div class="flex-auto">
				<h2 class="card-title">
					{name}
					{is_new && <div class="badge badge-secondary">NEW</div>}
				</h2>
			</div>
			<div class="flex-none justify-end card-title flex gap-2 flex-wrap">
				{tags.map(tag => (
					<div class="badge badge-outline">{tag}</div>
				))}
			</div>
		</header>
		<p set:html={description}></p>
		<div class="card-actions justify-end flex-wrap gap-2">
			{links.map(link => (
				<a href={link.href} class={`btn ${link.class}`}>{link.text}</a>
			))}
		</div>
	</div>
</div>
